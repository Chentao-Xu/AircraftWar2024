<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OfflineActivity">

    <TextView
        android:id="@+id/OfflineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="300sp"
        android:text="单机模式难度选择"
        android:textSize="35sp" />

    <Button
        android:id="@+id/EasyModButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简单模式"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/OfflineText"
        android:layout_marginTop="80sp" />

    <Button
        android:id="@+id/NormalModButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="普通模式"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/EasyModButton"
        android:layout_marginTop="20sp"/>

    <Button
        android:id="@+id/HardModButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="困难模式"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NormalModButton"
        android:layout_marginTop="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>